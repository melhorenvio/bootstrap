.header
    position relative
    display flex
    flex-direction column
    justify-content center
    align-items center
    width 100%
    min-height 100vh
    margin-bottom 4.8rem
    &__title
        display flex
        flex-direction column
        justify-content center
        align-items center
        size 26rem auto
        margin-bottom .5rem
    &__logo
        size auto 12rem
        margin-bottom 2rem
        svg-color $mandy
        transform translateX( 33% )
    &__logotype
        width 100%
        svg-color $mandy
    &::after
        content "â§©"
        absolute bottom .5rem left 50%
        font-size 2.4rem
        color gray
        transform translateX( -50% )

